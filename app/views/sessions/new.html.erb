<h1>Sign In</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit "Sign in", class: " mt-2 btn btn-primary" %>
<% end %>